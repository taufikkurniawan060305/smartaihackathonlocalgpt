<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= hotel.name %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">

  <div class="max-w-5xl mx-auto px-4 md:px-0 py-6">

    <!-- Hotel Info Card -->
    <div class="bg-white rounded-2xl shadow-lg p-6 mb-6">
      <h1 class="text-3xl font-bold mb-2 text-gray-900"><%= hotel.name %></h1>
      <p class="text-gray-600 mb-2"><%= hotel.category %> â€¢ <%= hotel.partnerStatus %></p>
      <p class="text-gray-700 mb-1 font-medium"><%= hotel.ranking %></p>
      <p class="text-gray-700 mb-4 font-semibold"><%= hotel.award %></p>
      <div class="flex flex-col md:flex-row md:justify-between md:items-center">
        <p class="text-2xl font-bold text-green-600 mb-3 md:mb-0">Rp <%= hotel.price %></p>
        <a href="https://www.traveloka.com/" target="_blank" class="inline-block px-6 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition">Book Now</a>
      </div>
    </div>

    <!-- Hero Image -->
    <div class="rounded-2xl overflow-hidden shadow-lg mb-6">
      <img src="https://source.unsplash.com/1200x500/?hotel,building" alt="<%= hotel.name %>" class="w-full object-cover">
    </div>

    <!-- Guest Reviews -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
      <% for (const [key, value] of Object.entries(hotel.reviews)) { %>
        <div class="bg-white p-4 rounded-xl shadow flex flex-col items-center">
          <p class="text-xl font-bold text-blue-600"><%= value %></p>
          <p class="text-gray-700 mt-1 text-center capitalize"><%= key.replace(/([A-Z])/g, ' $1') %></p>
        </div>
      <% } %>
    </div>

    <!-- Nearby Places -->
    <div class="bg-white rounded-2xl shadow-lg p-6 mb-6">
      <h2 class="text-xl font-semibold mb-3">Nearby</h2>
      <ul class="space-y-2 text-gray-700">
        <% hotel.nearby.forEach(place => { %>
          <li class="flex justify-between border-b pb-2"><span><%= place.name %></span> <span class="text-gray-500"><%= place.distance %></span></li>
        <% }) %>
      </ul>
    </div>

    <!-- Facilities -->
    <div class="bg-white rounded-2xl shadow-lg p-6 mb-6">
      <h2 class="text-xl font-semibold mb-3">Facilities</h2>
      <div class="flex flex-wrap gap-2">
        <% hotel.facilities.forEach(fac => { %>
          <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium"><%= fac %></span>
        <% }) %>
      </div>
    </div>

    <!-- Highlights -->
    <div class="bg-white rounded-2xl shadow-lg p-6 mb-6">
      <h2 class="text-xl font-semibold mb-3">Highlights</h2>
      <ul class="list-disc list-inside text-gray-700 space-y-1">
        <% hotel.highlights.forEach(h => { %>
          <li><%= h %></li>
        <% }) %>
      </ul>
    </div>

    <p class="text-gray-500 mb-10">Location: <span class="font-medium"><%= hotel.location %></span></p>
  </div>

</body>
</html>
